{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"emitDeclarationOnly": false,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test"]
}
